INCLUDES = \
    -I$(top_srcdir)/src/libmirage \
    $(glib_CFLAGS) \
    $(gobject_CFLAGS) \
    $(gmodule_CFLAGS)
    
plugindir = $(MIRAGE_PLUGIN_DIR)

plugin_LTLIBRARIES = image-iso.la

noinst_HEADERS = \
    image-iso.h \
    image-iso-disc.h

image_iso_la_SOURCES = \
    image-iso-disc.c \
    image-iso-plugin.c

image_iso_la_LIBADD = \
    $(glib_LIBS) \
    $(gobject_LIBS) \
    $(gmodule_LIBS)

image_iso_la_LDFLAGS = \
    -module \
    -avoid-version


mimedir = $(datadir)/mime/packages
mime_DATA = libmirage-image-iso.xml

EXTRA_DIST = $(mime_DATA)
